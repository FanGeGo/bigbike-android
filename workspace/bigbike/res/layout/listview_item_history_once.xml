<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#22000000"
        android:orientation="vertical"
        android:padding="15dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/listview_item_history_once_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="梧桐山一日骑行"
                android:textColor="#7bcc43"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/listview_item_history_once_open"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginLeft="5dip"
                android:background="@drawable/cycling_open" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginTop="3dip"
            android:background="#7bcc43" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#22000000"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="#66ffffff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="5dip"
                android:paddingLeft="15dip"
                android:paddingTop="9dip" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="里程 km"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/listview_item_history_label_textsize" />

                <TextView
                    android:id="@+id/listview_item_history_once_mileage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/listview_item_history_value_textsize" />
            </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="#66ffffff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="5dip"
                android:paddingLeft="15dip"
                android:paddingTop="9dip" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="均速 km/h "
                    android:textColor="#ffffff"
                    android:textSize="@dimen/listview_item_history_label_textsize" />

                <TextView
                    android:id="@+id/listview_item_history_once_speedavg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/listview_item_history_value_textsize" />
            </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="#66ffffff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="5dip"
                android:paddingLeft="15dip"
                android:paddingTop="9dip" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="能量 kcal"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/listview_item_history_label_textsize" />

                <TextView
                    android:id="@+id/listview_item_history_once_calorie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/listview_item_history_value_textsize" />
            </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="#66ffffff" />
        </LinearLayout>

        <LinearLayout
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#22000000"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="#66ffffff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="5dip"
                android:paddingLeft="15dip"
                android:paddingTop="9dip" >

                <TextView
                    android:id="@+id/listview_item_history_once_totaltimeunit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="时间 h"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/listview_item_history_label_textsize" />

                <TextView
                    android:id="@+id/listview_item_history_once_totaltime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/listview_item_history_value_textsize" />
            </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="#66ffffff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="5dip"
                android:paddingLeft="15dip"
                android:paddingTop="9dip" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="极速 km/h"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/listview_item_history_label_textsize" />

                <TextView
                    android:id="@+id/listview_item_history_today_speedmax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/listview_item_history_value_textsize" />
            </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="#66ffffff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="5dip"
                android:paddingLeft="15dip"
                android:paddingTop="9dip" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="爬坡 m"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/listview_item_history_label_textsize" />

                <TextView
                    android:id="@+id/listview_item_history_once_altitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/listview_item_history_value_textsize" />
            </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="#66ffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:background="@drawable/cycling_clock" />

            <TextView
                android:id="@+id/listview_item_history_once_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:text="04-12 12:45"
                android:textColor="#88ffffff"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/listview_item_history_once_delete"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:background="@drawable/cycling_delete" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>