<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="13dip"
    android:paddingLeft="15dip"
    android:paddingRight="15dip"
    android:paddingTop="13dip" >

    <TextView
        android:id="@+id/listview_item_history_today_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="今日"
        android:textColor="#7bcc43"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="3dip"
        android:background="#7bcc43" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="#22000000"
        android:orientation="horizontal" >

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#66ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="5dip"
            android:paddingLeft="15dip"
            android:paddingTop="9dip" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="里程 km"
                android:textColor="#ffffff"
                android:textSize="@dimen/listview_item_history_label_textsize" />

            <TextView
                android:id="@+id/listview_item_history_today_mileage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textColor="#ffffff"
                android:textSize="@dimen/listview_item_history_value_textsize" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#66ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="5dip"
            android:paddingLeft="15dip"
            android:paddingTop="9dip" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="均速 km/h "
                android:textColor="#ffffff"
                android:textSize="@dimen/listview_item_history_label_textsize" />

            <TextView
                android:id="@+id/listview_item_history_today_speedavg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textColor="#ffffff"
                android:textSize="@dimen/listview_item_history_value_textsize" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#66ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="5dip"
            android:paddingLeft="15dip"
            android:paddingTop="9dip" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="能量 kcal"
                android:textColor="#ffffff"
                android:textSize="@dimen/listview_item_history_label_textsize" />

            <TextView
                android:id="@+id/listview_item_history_today_calorie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="@dimen/listview_item_history_value_textsize" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#66ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="#22000000"
        android:orientation="horizontal" >

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#66ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="5dip"
            android:paddingLeft="15dip"
            android:paddingTop="9dip" >

            <TextView
                android:id="@+id/listview_item_history_today_totaltimeunit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="时间 h"
                android:textColor="#ffffff"
                android:textSize="@dimen/listview_item_history_label_textsize" />

            <TextView
                android:id="@+id/listview_item_history_today_totaltime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="#ffffff"
                android:textSize="@dimen/listview_item_history_value_textsize" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#66ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="5dip"
            android:paddingLeft="15dip"
            android:paddingTop="9dip" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="极速 km/h"
                android:textColor="#ffffff"
                android:textSize="@dimen/listview_item_history_label_textsize" />

            <TextView
                android:id="@+id/listview_item_history_today_speedmax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textColor="#ffffff"
                android:textSize="@dimen/listview_item_history_value_textsize" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#66ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="5dip"
            android:paddingLeft="15dip"
            android:paddingTop="9dip" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="爬坡 m"
                android:textColor="#ffffff"
                android:textSize="@dimen/listview_item_history_label_textsize" />

            <TextView
                android:id="@+id/listview_item_history_today_altitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="@dimen/listview_item_history_value_textsize" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#66ffffff" />
    </LinearLayout>

</LinearLayout>